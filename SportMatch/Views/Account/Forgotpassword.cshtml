@{
    Layout = null;
}

@model SportMatch.Models.ForgotPasswordModel

<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>忘記密碼</title>
    <link rel="stylesheet" href="/css/forgotpassword.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <div class="forgot-password-form">
            <h2>忘記密碼</h2>
            <p>請輸入您的電子郵件，然後點擊「發送驗證碼」按鈕。</p>

            <form id="resetPasswordForm">
                <div class="input-group">
                    <label for="email">電子郵件：</label>
                    <input type="email" id="email" required />
                    <button type="button" id="sendCodeButton">發送驗證碼</button>
                </div>

                <div class="input-group hidden" id="verificationSection">
                    <label for="verificationCode">驗證碼：</label>
                    <input type="text" id="verificationCode" required />
                    <button type="button" id="verifyCodeButton">驗證</button>
                </div>

                <div class="input-group hidden" id="newPasswordSection" style="display: none;">
                    <label for="newPassword">新密碼：</label>
                    <input type="password" id="newPassword" required placeholder="至少8位，含大小寫及特殊符號" />
                    <label for="newPassword">確認密碼：</label>
                    <input type="password" id="newPassword" required placeholder="至少8位，含大小寫及特殊符號" />
                    <button type="submit" id="submitNewPassword">提交新密碼</button>
                </div>

                <div class="button-group">
                    <a href="/" class="home-button">
                        <i class="fas fa-house"></i> 回首頁
                    </a>

                </div>
            </form>

            <div id="message" class="message"></div>
        </div>
    </div>

    <script src="/js/forgotpassword.js"></script>
</body>
</html>

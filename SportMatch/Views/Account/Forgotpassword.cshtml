@{
    Layout = null;
}

@model SportMatch.Models.ForgotPasswordModel

<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>忘記密碼</title>
    <link rel="stylesheet" href="/css/forgotpassword.css" />
</head>
<body>
   

    <div class="container">
        <div class="forgot-password-form">
            <h2>忘記密碼</h2>
            <p>請輸入您的電子郵件，然後點擊「發送臨時密碼」按鈕。</p>

            <form id="resetPasswordForm">
                <!-- 電子郵件輸入 & 發送臨時密碼按鈕 -->
                <div class="input-group">
                    <label for="email">電子郵件：</label>
                    <input type="email" id="email" required />
                    <button type="button" id="sendTempPasswordButton">發送臨時密碼</button>
                    <!-- 回首頁按鈕 -->
                    <div class="button-group">
                        <a href="/" class="home-button">回首頁</a>
                    </div>
                </div>
                


                <!-- 顯示臨時密碼 -->
                <div id="tempPassword" class="message"></div>
            </form>
            <!-- 模態視窗 -->
            <div id="successModal" class="modal">
                <div class="modal-content">
                    <h3>驗證碼已發送 ✅</h3>
                    <p>請檢查您的電子郵件，輸入收到的臨時密碼。</p>
                    <button id="closeModal" class="modal-button">確定</button>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/forgotpassword.js"></script>
</body>
</html>

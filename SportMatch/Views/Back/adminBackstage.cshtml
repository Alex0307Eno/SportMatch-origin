@model SportMatch.Models.User

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    var userName = ViewBag.UserName;
}






<link rel="stylesheet" href="~/css/backstage.css" />

<style>    
    #background {
        background: linear-gradient(135deg, #e74c3c, #3498db, #2ecc71, #f1c40f);
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        font-family: 'openhuninn';
        z-index: -51;
    }

    #bg-overlay {
        content: "";
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.7);
        z-index: -50;
    }

    .content{
        background-color: rgba(255, 255, 255, 0.2);
    }

    .welcome-message {
        background-color:transparent;
        color: #f3f5f5;
    }

    label {
        color:#f3f5f5;
        font-size:xx-large;
    }
    
    .delete-btn{
        border-radius: 8px;
        background-color:rgb(255,0,0,0.7);
    }

</style>

<div id="background" style="width:100%">
    <div id="bg-overlay">
        <div class="container" style="padding-top:80px">
            <aside class="sidebar">
                <h2>SportMatch</h2>
                <nav>
                    <ul>
                        <li class="active"
                            data-target="member-management"
                            onclick="switchTab('member-management');loadMember()">
                            <i class="fas fa-person"></i> 會員管理
                        </li>
                        <li data-target="product-management"
                            onclick="switchTab('product-management');loadProducts()">
                            <i class="fas fa-box"></i> 商品管理
                        </li>
                        <li data-target="order-management"
                            onclick="switchTab('order-management');loadOrders()">
                            <i class="fas fa-clipboard-list"></i> 訂單管理
                        </li>
                    </ul>
                </nav>
            </aside>

            <main class="content">
                <div class="welcome-message mt-2">
                    <p id="userNameDisplay">歡迎，訪客</p>
                </div>

                <header style="" id="header" class="ms-5">                    
                    <div class="tabs">
                        <button class="tab-button active" data-target="order-history">
                            已上架
                        </button>
                        <button class="tab-button" data-target="match-history">
                            待審核<span class="badge">2</span>
                        </button>
                    </div>
                    <div class="category-toggle">
                        <button class="category-btn active" data-category="baseball">
                            棒球
                        </button>
                        <button class="category-btn" data-category="badminton">羽球</button>
                        <button class="category-btn" data-category="volleyball">
                            排球
                        </button>
                    </div>
                    <div class="search-bar">
                        <input type="text"
                               id="search-input"
                               placeholder="輸入訂單編號或商品名稱" />
                        <button id="search-btn">搜尋</button>
                    </div>
                </header>
                <div class="filter me-5">
                    <label for="payment-method">篩選方式</label>
                    <select id="payment-method">
                        <!-- JavaScript 會填充這些選項 -->
                    </select>
                </div>



                <!-- 會員管理區域 -->
                <section id="member-management" class="section-content mx-5">
                    <label>會員管理</label>
                    <table>
                        <thead>
                            <tr>
                                <th>角色</th>
                                <th>會員編號</th>
                                <th>使用者名稱</th>
                                <th>Email</th>
                                <th>統一編號</th>
                                <th>註冊日期</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- 這裡會透過 JS 插入會員資料 -->
                        </tbody>
                    </table>
                </section>
                <!-- 商品管理區域 -->
                <section id="product-management" class="section-content mx-5">
                    <label>商品管理</label>
                    <table>
                        <thead>
                            <tr>
                                <th>商品名稱</th>
                                <th>價格</th>
                                <th>折扣</th>
                                <th>庫存</th>
                                <th>發佈日期</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody id="productTable">
                            <!-- 這裡會透過 JS 插入會員資料 -->
                        </tbody>
                    </table>
                </section>

                <!-- 訂單管理區域 -->
                <section id="order-management" class="section-content mx-5">
                    <label>訂單管理</label>
                    <table>
                        <thead>
                            <tr>
                                <th>訂單編號</th>
                                <th>客戶編號</th>
                                <th>客戶名稱</th>
                                <th>商品名稱</th>
                                <th>數量</th>
                                <th>付款方式</th>
                                <th>收貨地址</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody id="orderTable">
                            <!-- 這裡會透過 JS 插入會員資料 -->
                        </tbody>
                    </table>
                </section>
                <div style="display: flex; justify-content: flex-end;">
                    <div id="pagination" style="padding: 5px;" class="me-5 mt-3"></div>
                </div>
                @* <!-- 已上架商品區 --> *@
                @* <section id="order-history" class="tab-content active" style="display:none;"> *@
                @*     <h2>已上架</h2> *@
                @*     <table> *@
                @*         <thead> *@
                @*             <tr> *@
                @*                 <th>商品編號</th> *@
                @*                 <th>名稱</th> *@
                @*                 <th>價格</th> *@
                @*                 <th>廠牌</th> *@
                @*                 <th>類型</th> *@
                @*                 <th>庫存</th> *@
                @*                 <th>上架狀態</th> *@
                @*                 <th>上架日期</th> *@
                @*                 <th>操作</th> *@
                @*             </tr> *@
                @*         </thead> *@

                @*     </table> *@
                @* </section> *@

                @* <!-- 待審核商品區 --> *@
                @* <section id="match-history" class="tab-content" style="display:none;"> *@
                @*     <h2>待審核 <span class="badge">2</span></h2> *@
                @*     <table> *@
                @*         <thead> *@
                @*             <tr> *@
                @*                 <th>訂單編號</th> *@
                @*                 <th>商品名稱</th> *@
                @*                 <th>價格</th> *@
                @*                 <th>廠牌</th> *@
                @*                 <th>類型</th> *@
                @*                 <th>訂購數量</th> *@
                @*                 <th>客戶名稱</th> *@
                @*                 <th>購買日期</th> *@
                @*                 <th>編輯</th> *@
                @*             </tr> *@
                @*         </thead> *@


                @*     </table> *@
                @* </section> *@
            </main>
        </div>

    </div>
</div>
<script src="/js/backstage.js" asp-append-version="true"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


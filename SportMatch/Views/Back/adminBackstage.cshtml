@model SportMatch.Models.User

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    var userName = ViewBag.UserName;
}



<title>SportMatch 訂單紀錄</title>
<link rel="stylesheet" href="/css/backstage.css" />
<link rel="stylesheet" href="/layout/layout.css" />
<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

<body>


    <div class="container">
        <aside class="sidebar">
            <h2>SportMatch</h2>
            <nav>
                <ul>
                    <li class="active"
                        data-target="member-management"
                        onclick="switchTab('member-management')">
                        <i class="fas fa-person"></i> 會員管理
                    </li>
                    <li data-target="product-management"
                        onclick="switchTab('product-management')">
                        <i class="fas fa-box"></i> 商品管理
                    </li>
                    <li data-target="order-management"
                        onclick="switchTab('order-management')">
                        <i class="fas fa-clipboard-list"></i> 訂單管理
                    </li>
                </ul>
            </nav>
        </aside>

        <main class="content">
            <div class="welcome-message">
                <p id="userNameDisplay">歡迎，訪客</p>
            </div>

            <header style="" id="header">
                <h1>歷史紀錄</h1>
                <div class="tabs">
                    <button class="tab-button active" data-target="order-history">
                        已上架
                    </button>
                    <button class="tab-button" data-target="match-history">
                        待審核<span class="badge">2</span>
                    </button>
                </div>
                <div class="category-toggle">
                    <button class="category-btn active" data-category="baseball">
                        棒球
                    </button>
                    <button class="category-btn" data-category="badminton">羽球</button>
                    <button class="category-btn" data-category="volleyball">
                        排球
                    </button>
                </div>
                <div class="search-bar">
                    <input type="text"
                           id="search-input"
                           placeholder="輸入訂單編號或商品名稱" />
                    <button id="search-btn">搜尋</button>
                </div>
            </header>
            <div class="filter">
                <label for="payment-method">篩選方式</label>
                <select id="payment-method">
                    <!-- JavaScript 會填充這些選項 -->
                </select>
            </div>



            <!-- 會員管理區域 -->
            <section id="member-management" class="section-content">
                <h2>會員管理</h2>
                <table>
                    <thead>
                        <tr>
                            <th>角色</th>
                            <th>會員編號</th>
                            <th>使用者名稱</th>
                            <th>Email</th>
                            <th>統一編號</th>
                            <th>註冊日期</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- 這裡會透過 JS 插入會員資料 -->
                    </tbody>
                </table>
            </section>
            <!-- 商品管理區域 -->
            <section id="product-management" class="section-content">
                <h2>商品管理</h2>
                <table>
                    <thead>
                        <tr>
                            <th>商品編號</th>
                            <th>名稱</th>
                            <th>價格</th>
                            <th>廠牌</th>
                            <th>類型</th>
                            <th>庫存</th>
                            <th>上架狀態</th>
                            <th>上架日期</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- 這裡會透過 JS 插入會員資料 -->
                    </tbody>
                </table>
            </section>

            <!-- 訂單管理區域 -->
            <section id="order-management" class="section-content">
                <h2>訂單管理</h2>
                <table>
                    <thead>
                        <tr>
                            <th>訂單編號</th>
                            <th>客戶名稱</th>
                            <th>商品名稱</th>
                            <th>數量</th>
                            <th>價格</th>
                            <th>付款狀態</th>
                            <th>訂單日期</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- 這裡會透過 JS 插入會員資料 -->
                    </tbody>
                </table>
            </section>

            <!-- 已上架商品區 -->
            <section id="order-history" class="tab-content active">
                <h2>已上架</h2>
                <table>
                    <thead>
                        <tr>
                            <th>商品編號</th>
                            <th>名稱</th>
                            <th>價格</th>
                            <th>廠牌</th>
                            <th>類型</th>
                            <th>庫存</th>
                            <th>上架狀態</th>
                            <th>上架日期</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                   
                </table>
            </section>

            <!-- 待審核商品區 -->
            <section id="match-history" class="tab-content">
                <h2>待審核 <span class="badge">2</span></h2>
                <table>
                    <thead>
                        <tr>
                            <th>訂單編號</th>
                            <th>商品名稱</th>
                            <th>價格</th>
                            <th>廠牌</th>
                            <th>類型</th>
                            <th>訂購數量</th>
                            <th>客戶名稱</th>
                            <th>購買日期</th>
                            <th>編輯</th>
                        </tr>
                    </thead>
                   

                </table>
            </section>
        </main>
    </div>
  

    <script src="/js/backstage.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
</body>

@section Scripts {
    <script src="~/Views/Mart/Checkout.cshtml.js" asp-append-version="true"></script>
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
<!-- 主頁面 -->
    <div class="container-fluid" id="CheckoutTopContainer">
        <div class="d-flex CheckoutContainer">
            <!-- 左購物車 -->
            <div class="CartBody d-flex ">
                <div class="my-3 CartScrollable">
                    <div class="card" id="CartItem">

                        <!-- 在這裡用JS捕捉Localstorage加商品 -->

                    </div>
                </div>
            </div>

            <!-- 右側結帳欄 -->
            <div class="d-flex flex-column CheckoutLogistics">
                <div class="Logistics">
                    <!-- 結帳方式 -->
                    <h4><i class="bi bi-bag"></i>選擇結帳方式</h4>
                    <div class="d-flex flex-column mx-5 my-3">
                        <div class="d-flex align-items-center mb-4">
                            <input type="radio" name="PaymentMethod" id="Seveneleven" onclick="TogglePaymentMethod();" />
                            <label for="Seveneleven">&nbsp;&nbsp;7-11取貨付款</label>
                        </div>
                        <div class="d-flex align-items-center mb-4">
                            <input type="radio" name="PaymentMethod" id="Familymart" onclick="TogglePaymentMethod();" />
                            <label for="Familymart">&nbsp;&nbsp;全家取貨付款</label>
                        </div>
                        <div class="d-flex align-items-center mb-4">
                            <input type="radio" name="PaymentMethod" id="ComeHome" onclick="TogglePaymentMethod();" />
                            <label for="ComeHome">&nbsp;&nbsp;貨到付款</label>
                        </div>
                    </div>
                </div>

                <!-- 取貨方式 -->
                <div class="Logistics">
                    <h4><i class="bi bi-truck"></i>&nbsp選擇取貨方式</h4>
                    <div class="d-flex flex-column mx-5 my-3">
                        <div class="d-flex align-items-center mb-3">
                            <input type="radio" name="ShippingMethod" id="SevenelevenPickup" onclick="TogglePaymentMethod();" disabled />
                            <label for="SevenelevenPickup" class="ms-2 Pickuptext">7-11取貨</label>
                            <button class="btn btn-outline ms-auto PickupBtn" id="SevenelevenPickupStore" for="FamilymartPickup" data-bs-toggle="modal" data-bs-target="#MartModal" onclick="electronicMapSeven()" disabled>選擇取貨店家</button>
                        </div>
                        <div class="d-flex align-items-center mb-3">
                            <input type="radio" name="ShippingMethod" id="FamilymartPickup" onclick="TogglePaymentMethod();" disabled />
                            <label for="FamilymartPickup" class="ms-2 Pickuptext">全家取貨</label>
                            <button class="btn btn-outline ms-auto PickupBtn" id="FamilymartPickupStore" for="FamilymartPickup" data-bs-toggle="modal" data-bs-target="#MartModal" onclick="electronicMapFami()" disabled>選擇取貨店家</button>
                        </div>
                        <div class="d-flex align-items-center mb-3">
                            <input type="radio" name="ShippingMethod" id="HomeDeliveryPickup" onclick="TogglePaymentMethod();" disabled />
                            <label for="HomeDeliveryPickup" class="ms-2 Pickuptext">宅配到府</label>
                            <div class="d-flex ms-auto PickupBtn">
                                <input type="text" class="form-control" id="HomeDeliveryName" placeholder="姓名" for="HomeDeliveryPickup" disabled />
                                <input type="text" class="form-control" id="HomeDeliveryPhone" placeholder="電話" for="HomeDeliveryPickup" disabled />
                            </div>
                        </div>
                        <div class="ms-2 d-flex align-items-center mb-3">
                            <div class="w-50">
                                <select id="HomeDeliveryCity" name="city" class="form-control text-center" disabled >
                                    <option value="" disabled selected>-- 縣 --&nbsp;&nbsp;&nbsp;</option>
                                    <option value="台北市">台北市&nbsp;&nbsp;&nbsp;</option>
                                    <option value="新北市">新北市&nbsp;&nbsp;&nbsp;</option>
                                    <option value="桃園市">桃園市&nbsp;&nbsp;&nbsp;</option>
                                    <option value="台中市">台中市&nbsp;&nbsp;&nbsp;</option>
                                    <option value="台南市">台南市&nbsp;&nbsp;&nbsp;</option>
                                    <option value="高雄市">高雄市&nbsp;&nbsp;&nbsp;</option>
                                    <option value="基隆市">基隆市&nbsp;&nbsp;&nbsp;</option>
                                    <option value="新竹市">新竹市&nbsp;&nbsp;&nbsp;</option>
                                    <option value="嘉義市">嘉義市&nbsp;&nbsp;&nbsp;</option>
                                    <option value="宜蘭縣">宜蘭縣&nbsp;&nbsp;&nbsp;</option>
                                    <option value="屏東縣">屏東縣&nbsp;&nbsp;&nbsp;</option>
                                    <option value="台東縣">台東縣&nbsp;&nbsp;&nbsp;</option>
                                    <option value="花蓮縣">花蓮縣&nbsp;&nbsp;&nbsp;</option>
                                    <option value="澎湖縣">澎湖縣&nbsp;&nbsp;&nbsp;</option>
                                    <option value="金門縣">金門縣&nbsp;&nbsp;&nbsp;</option>
                                    <option value="連江縣">連江縣&nbsp;&nbsp;&nbsp;</option>
                                </select>
                            </div>
                            <input type="text" class="form-control" id="HomeDeliveryAddress" placeholder="地址" for="HomeDeliveryPickup" disabled />
                        </div>
                        <div class="ms-2 d-flex align-items-center mb-3">
                            <select class="form-select" id="HomeDeliveryAllInfo" placeholder="宅配資料" for="HomeDeliveryPickup" disabled>
                                <option value="" id="HomeDeliveryAllInfoTittle" disabled selected>-- 選取儲存的資訊 --</option>
                                <!--JS迴圈-->
                            </select>
                        </div>
                    </div>
                </div>
                <!-- 總計和按鈕 -->
                <div class="Logistics">                    
                    <div class="d-flex justify-content-between">
                      <strong>總計:</strong><span id="NoDiscountPrice"> <!--折扣前價格--></span>
                    </div>
                    <div class="d-flex justify-content-between">
                    <div></div><span id="TotalPrice">&nbsp;<!--折扣後價格--></span>
                    </div>
                    <div class="d-flex justify-content-between mt-3">
                        <div class="w-100 backBtnClass" onclick="window.location.href='Mart'">繼續選購</div>
                        <button class="btn w-100 OrangeBtnClass" id="checkoutNow">結帳</button>
                    </div>
                </div>
            </div>

        </div>
    </div>
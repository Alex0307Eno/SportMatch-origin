    <title>SportMatch</title>
	
  </head>


<body>
    
    <style>
        /* 密碼與 email 顯示/隱藏按鈕 */
        .toggle-email,
        .toggle-password {
            position: absolute;
            right: 1rem;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            cursor: pointer;
            color: var(--primary-color);
            font-size: 1rem;
            transition: transform 0.3s ease, color 0.3s ease;
        }

            /* 密碼顯示/隱藏 icon 旋轉效果 */
            .toggle-password .fa-lock,
            .toggle-password .fa-lock-open-outline {
                transition: transform 0.3s ease;
            }

            .toggle-password .fa-eye-open-outline {
                transform: rotate(180deg);
            }

            /* 當 hover 在按鈕上時，變化顏色 */
            .toggle-email:hover,
            .toggle-password:hover {
                color: var(--secondary-color);
            }
    </style>
    <div class="header-container">
      
        <div class="logo">
            <!-- Logo 這裡可以放置你的網站 Logo -->
        </div>

        <nav class="main-nav">
            <div class="hamburger-menu" onclick="toggleHamburgerMenu()">
                <i class="fas fa-bars"></i> <!-- Hamburger icon -->
            </div>
            <ul>
                <li><a href="#home">首頁</a></li>
                <li><a href="#matching" id="matchingLink">配對系統</a></li>
                <li><a href="#events" id="eventsLink">賽事資訊</a></li>
                <li><a href="#venues">場地資訊</a></li>
                <li><a href="#shop">運動商城</a></li>
            </ul>
            <div class="header-actions">
                <div class="user-actions">
                    <div class="cart-container" style="display: none">
                        <button class="btn-cart" data-count="0" onclick="toggleCart()">
                            <i class="fas fa-shopping-cart"></i>
                        </button>
                        <div class="cart-dropdown">
                            <div class="no-cart-items">目前購物車是空的</div>
                        </div>
                    </div>
                    <div class="notifications-container" style="display: none">
                        <button class="btn-notifications"
                                data-count="0"
                                onclick="toggleNotifications()">
                            <i class="fas fa-bell"></i>
                        </button>
                        <div class="notifications-dropdown">
                            <div class="no-notifications">目前沒有任何通知</div>
                        </div>
                    </div>
                    <button onclick="openLoginModal()" class="btn-login">登入</button>
                    <a href="@Url.Action("Register", "Account")" class="btn-register">註冊</a>
                    <div class="user-email-container" style="display: none">
                        <span class="user-email"></span>
                        <div class="dropdown-content">
                            <a href="#profile">個人資料</a>
                            <a href="#matches">配對資訊</a>

                            <a href="#cart">購物車清單</a>
                            <a href="#favorites">收藏清單</a>
                            <button class="btn-logout" onclick="handleLogout()">
                                登出
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </div>
   
    <!-- 自訂的確認框 -->
    <div id="custom-confirm" class="confirm-modal" style="display:none;">
        <div class="confirm-content">
            <p id="confirm-message">您尚未登入，是否要立即登入？</p>
            <button id="confirm-yes">確定</button>
            <button id="confirm-no">取消</button>
        </div>
    </div>
    
    <!-- 登入彈窗 -->

    <div id="loginModal" class="modal">
        <div class="modal-content">
            <div class="login-header">
                <h2>會員登入</h2>
                <button class="close-modal" onclick="closeModal()">&times;</button>
                <div class="sports-icons sports-icons-marquee">
                    <i class="fas fa-basketball-ball"></i>
                    <i class="fas fa-futbol"></i>
                    <i class="fas fa-volleyball-ball"></i>
                </div>
            </div>
            <!-- 新增登入切換區塊 -->
            <div class="login-tabs">
                <button id="memberLoginBtn" class="active" onclick="switchLogin('member')">會員登入</button>
                <button id="vendorLoginBtn" onclick="switchLogin('vendor')">廠商登入</button>
            </div>
            <!-- 會員登入表單 -->

            <form action="/Account/Login" method="post" class="login-form" id="loginForm">
                <div id="memberLogin" class="login-form-container">

                <div class="input-group">
                    <i class="fas fa-person"></i>
                    <input type="email" id="email" placeholder="請輸入Email" required />
                    <button type="button" class="toggle-email">
                        <span class="icon">
                            <ion-icon name="mail-outline"></ion-icon>
                        </span>
                    </button>
                </div>

                <div class="input-group password-group">
                    <i class="fas fa-lock"></i>
                    <input type="password" id="password" placeholder="請輸入密碼" required />
                        <button type="button" id="showPasswordBtn" class="toggle-password">👁</button>

                </div>
                <div class="remember-me">
                    <label class="checkbox-container">
                        <input type="checkbox" id="remember" />
                        <span class="checkmark"></span>
                        記住我的帳號
                    </label>
                </div>
                    <button type="submit" class="btn-submit" id="btn-submit">
                        <i class="fas fa-running"></i> 會員登入
                    </button>
                <div class="error-message" style="display:none;"></div>     

               
                
                </div>

            </form>
            <!-- 廠商登入表單（預設隱藏） -->
            <div id="vendorLogin" class="login-form-container" style="display: none;">
                <form action="/Vendor/Login" method="post" class="login-form">
                    <div class="input-group">
                        <i class="fas fa-store"></i>
                        <input type="email" id="vendorEmail" placeholder="請輸入廠商Email" required />
                        <button type="button" class="toggle-email">
                            <span class="icon">
                                <ion-icon name="mail-outline"></ion-icon>
                            </span>
                        </button>
                    </div>
                    <div class="input-group password-group">
                        <i class="fas fa-lock"></i>
                        <input type="password" id="password" placeholder="請輸入密碼" required />
                        <button type="button" id="showPasswordBtn2" class="toggle-password">👁</button>

                    </div>

                    <div class="remember-me">
                        <label class="checkbox-container">
                            <input type="checkbox" id="remember" />
                            <span class="checkmark"></span>
                            記住我的帳號
                        </label>
                    </div>
                    <button type="submit" class="btn-submit" id="btn-submit">
                        <i class="fas fa-running"></i> 廠商登入
                    </button>
                </form>
            </div>
            <div class="form-footer">
                <a href="@Url.Action("ForgotPassword", "Account")"><i class="fas fa-key"></i> 忘記密碼？</a>
                <a href="@Url.Action("Register", "Account")"><i class="fas fa-user-plus"></i> 加入會員</a>
            </div>
            <div class="social-login">
                <p>其他登入方式</p>
                <div class="social-a">
                    <button class="social-btn facebook">
                        <i class="fab fa-facebook-f"></i>
                    </button>
                    <button class="social-btn google">
                        <i class="fab fa-google"></i>
                    </button>
                    <button class="social-btn line">
                        <i class="fab fa-line"></i> 
                    </button>


                </div>
            </div>
        </div>
    </div>

    <script
      type="module"
      src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"
    ></script>
    <script
      nomodule
      src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"
    ></script>
    

    <script src="~/js/login.js"></script>

    <div class="container-fluid">
      @RenderBody()

    </div>
  </body>
</html>

<script src="~/lib/jquery/dist/jquery.min.js"></script>

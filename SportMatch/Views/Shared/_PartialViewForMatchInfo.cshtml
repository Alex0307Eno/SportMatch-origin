@model TestForMatch
<div class="col-md-6 mb-3">
	<div class="card mb-3 bg-dark text-light border-warning" style="max-width: 540px;">
		<div class="row g-0">
			<div class="col-md-4">
				<img src="@Model.Image" class="img-fluid rounded-start" alt="...">
			</div>
			<div class="col-md-8">
				<div class="card-body">
					<p class="card-title" style="font-size:x-large">@Model.Name</p>
					<hr/>
					<p class="card-text">擅長位置：@Model.Role</p>
					<div class="row">
						<div class="col-md-8 d-flex align-items-center">
							<label class="card-text">個人簡介</label>
							<a id="personalInfo" class="bi bi-info-square ms-2"
							   style="color: white;cursor: pointer;" data-bs-toggle="modal"
							   data-bs-target="#playerModal"
							   onclick="updateInfoModalContent('@Model.Name','@Model.Role','@Model.Image')"></a>
						</div>
						<div class="col-md-4">
							<a href="#" class="btn btn-primary" style="border-radius: 60px;"
							   data-bs-toggle="modal" data-bs-target="#playerApply"
							   onclick="updateApplyModalContent('@Model.Name','@Model.Role')">招募</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
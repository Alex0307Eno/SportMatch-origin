@{
	var user = ViewData["123"] as SportMatch.Models.TestForMatch;
}
<div class="col-md-6 mb-3">
	<div class="card mb-3 bg-dark text-light border-warning" style="max-width: 540px;">
		<div class="row g-0">
			<div class="col-md-4">
				<img src="~/image/MatchPage/001.png" class="img-fluid rounded-start" alt="...">
			</div>
			<div class="col-md-8">
				<div class="card-body">
					<h2 class="card-title">@user!.Name</h2>
					<p class="card-text">擅長位置：@user.Role</p>
					<div class="row">
						<div class="col-md-8 d-flex align-items-center">
							<label class="card-text">個人簡介</label>
							<a id="personalInfo" class="bi bi-info-square ms-2"
							   style="color: white;cursor: pointer;" data-bs-toggle="modal"
							   data-bs-target="#playerModal"
							   onclick="updateInfoModalContent('@user.Name','@user.Role','@user.Image')"></a>
						</div>
						<div class="col-md-4">
							<a href="#" class="btn btn-primary" style="border-radius: 60px;"
							   data-bs-toggle="modal" data-bs-target="#playerApply"
							   onclick="updateApplyModalContent('@user.Name','@user.Role')">招募</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>